# Sible Configuration Example
# Copy this file to .env and update the values

# App Settings
SIBLE_APP_NAME=Sible
SIBLE_SECRET_KEY=generate-a-long-random-string-here
SIBLE_DEBUG=False

# Database
# For SQLite: sqlite:///./sible.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
SIBLE_DATABASE_URL=sqlite:///./sible.db

# Infrastructure Paths
# Path where playbooks and inventories are stored
SIBLE_INFRA_PATH=/app/infrastructure
# If running in Docker, this is the host path to the infrastructure directory
# SIBLE_HOST_INFRA_PATH=/home/user/sible/infrastructure

# Docker Execution
SIBLE_USE_DOCKER=True
SIBLE_DOCKER_IMAGE=quay.io/ansible/ansible-runner:latest
SIBLE_DOCKER_WORKSPACE_PATH=/app/infrastructure

# Theme Settings
SIBLE_THEME_LIGHT="Geist Light"
SIBLE_THEME_DARK="Catppuccin Dark"
